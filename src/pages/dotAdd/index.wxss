Page .tip {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

Page .search {
  position: fixed;
  padding: 20rpx;
  background: #ffffff;
  top: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
}
Page .search input {
  width: 100%;
  border: 1rpx solid #c3c3c3;
  height: 60rpx;
  border-radius: 8rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}
Page .map-wrapper {
  position: fixed;
  top: 100rpx;
  bottom: 124rpx;
  left: 0;
  right: 0;
}
Page .map-wrapper.isX {
  bottom: 164rpx;
}
Page .map-wrapper .map {
  position: relative;
  width: 100%;
  height: 100%;
}
Page .map-wrapper .map .flag {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 120rpx;
  height: 140rpx;
  margin-left: -60rpx;
  margin-top: -60rpx;
  text-align: center;
  color: #e93b3d;
  font-size: 24rpx;
}
Page .map-wrapper .map .flag cover-image {
  margin: 0 16rpx 10rpx 24rpx;
  width: 80rpx;
  height: 80rpx;
}
Page .tip {
  position: fixed;
  padding: 20rpx;
  background: #ffffff;
  bottom: 0;
  left: 0;
  right: 0;
}
Page .tip.isX {
  padding-bottom: 60rpx;
}
Page .tip .bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
Page .tip .bd .info1 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
  height: 40rpx;
  margin-bottom: 10rpx;
}
Page .tip .bd .info2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
  height: 34rpx;
  font-size: 24rpx;
  color: #999999;
}
Page .tip .btn {
  background: #1ec8a2;
  color: #fff;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  text-align: center;
  padding: 14rpx 20rpx;
  line-height: 1.714286;
  margin-left: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}
Page .tip .btn:active {
  -webkit-transition: background 0.3s, color 0.3s;
  transition: background 0.3s, color 0.3s;
  background: #1aa889;
  color: #cccccc;
}
