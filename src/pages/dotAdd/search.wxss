Page .list .listItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

Page {
  background: #ffffff;
  padding-top: 100rpx;
}
Page .search {
  position: fixed;
  padding: 20rpx;
  background: #ffffff;
  top: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  z-index: 1;
  border-bottom: 1rpx solid #d1d3d4;
}
Page .search input {
  width: 100%;
  border: 1rpx solid #c3c3c3;
  height: 60rpx;
  border-radius: 8rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}
Page .list {
  background: #ffffff;
}
Page .list .listItem {
  position: relative;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #d1d3d4;
}
Page .list .listItem:after {
  content: "";
  height: 64rpx;
}
Page .list .listItem .bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
Page .list .listItem .bd .info1 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
  height: 40rpx;
  margin-bottom: 10rpx;
}
Page .list .listItem .bd .info2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
  height: 34rpx;
  font-size: 24rpx;
  color: #999999;
}
