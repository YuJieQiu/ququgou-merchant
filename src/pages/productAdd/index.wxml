                <view class="p-attribute-add">
                    <van-field value="{{ phone }}" label="规格" />
                    <van-field value="{{ phone }}" label="价格" />
                    <van-field value="{{ phone }}" label="库存" />
                </view> 
            </view>
            <view class="p-attribute">
                <view class="p-attribute-add">
                    <van-field value="{{ phone }}" label="规格" />
                    <van-field value="{{ phone }}" label="价格" />
