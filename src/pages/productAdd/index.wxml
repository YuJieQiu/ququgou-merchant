                </view>
                <view class="p-attribute-delete">
                    <van-button round type="danger">删除</van-button>
                </view>
            </view> -->
            <!-- 商品 规格 添加 E --> 
            <!-- 商品详情 S -->
            <van-cell title="商品详情" is-link  url="/pages/webView/index?url=http://127.0.0.1:7080/static/demo/"/>
            <!-- 商品详情 E -->
        </van-cell-group>
    </view>
    
</view>
 
